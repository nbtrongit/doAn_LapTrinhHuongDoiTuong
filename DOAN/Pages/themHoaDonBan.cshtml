@model DOAN.Pages.themHoaDonBanModel
@using ENTITIES

<form method="post">
    <label>Mã hóa đơn</label><br>
    <input type="text" name="maHD" value="" pattern="^[^\s]+(\s+[^\s]+)*$" required><br>
    <label>Ngày hóa đơn</label><br>
    <input type="text" name="ngayHD" value="" pattern="^(?:(?:31(\/)(?:0?[13578]|1[02]))\1|(?:(?:29|30)(\/)(?:0?[1,3-9]|1[0-2])\2))(?:(?:1[6-9]|[2-9]\d)?\d{2})$|^(?:29(\/|-|\.)0?2\3(?:(?:(?:1[6-9]|[2-9]\d)?(?:0[48]|[2468][048]|[13579][26])|(?:(?:16|[2468][048]|[3579][26])00))))$|^(?:0?[1-9]|1\d|2[0-8])(\/)(?:(?:0?[1-9])|(?:1[0-2]))\4(?:(?:1[6-9]|[2-9]\d)?\d{2})$" required><br>
    <label>Mã Hàng</label><br>
    <select name="maMH" required>
        <option value="">Chọn mã hàng</option>
        @foreach (MatHang mh in Model.dsMatHang)
        {
<option value="@mh.maHang">@mh.maHang</option>}
    </select><br><br>
    <label>Số lượng</label><br>
    <input type="text" name="soLuong" value="" pattern="^[0-9]*$" required><br>
    <label>Đơn giá bán</label><br>
    <input type="text" name="donGia" value="" pattern="^[0-9]*$" required><br><br>
    <button type="submit" name="suKien" value="Thêm">Thêm</button>
</form>
